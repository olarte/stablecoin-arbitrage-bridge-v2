entrypoint = "src/server/index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["lsof"]

[deployment]
run = ["sh", "-c", "cd src/server && NODE_ENV=production node index.js"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["sh", "-c", "cd stablearb-frontend && npm install && npm run build"]

[workflows]
runButton = "Start Full Stack"

[[workflows.workflow]]
name = "Start Server"
author = 44771434
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server/index.js"

[[workflows.workflow]]
name = "Production Build"
author = 44771434
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd stablearb-frontend && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/server && NODE_ENV=production node index.js"

