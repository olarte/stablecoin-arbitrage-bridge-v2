entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["lsof"]

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Start Server"
author = 44771434
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server/index.js"

[[ports]]
localPort = 5000
externalPort = 80
